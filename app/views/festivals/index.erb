<% if flash[:message] %>
  <div class="alert alert-info" role="alert">
    <%= flash[:message] %>
  </div>
<% end %>

<h1 class="jumbotron text-center">Upcoming Festivals</h1>

<div class="container">
  <div class="row create-festival">
    <a href="/festivals/new" class="btn btn-primary">Add New Festival</a>
  </div>

  <% Festival.all.each do |festival| %>
    <div class="row">
      <div class="col-md-10 col-md-offset-1">
        <div class="festival-section text-center">
          <h2><a href="/festivals/<%= festival.id %>"><%= festival.name %></a></h2>
          <h4><%= festival.location %></h4>
          <p><%= festival.date %></p>
        </div>
      </div>
    </div>
  <% end %>
</div>

