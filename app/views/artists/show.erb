<a href="/festivals"><i class="fa fa-chevron-circle-left" aria-hidden="true"></i> Back to Festivals</a>

<div class="text-center" style="
  background: url('<%= random_bg_image_url %>') no-repeat center center;
  padding: 100px;
  background-position: center;
  background-size: cover;
  background-attachment: fixed;
  border-radius: 10px 10px 0 0;">
  <h1><%= @artist.name %></h1>
</div>

<div class="well text-center">
  <h2><%= @artist.genre %></h2>
</div>

<div class="well">
  <h2 class="text-center">Performing at...</h2>

  <% @artist.festivals.each do |festival| %>
    <div class="row">
      <div class="col-md-10 col-md-offset-1">
        <div class="festival-section going text-center">
          <a href="/festivals/<%= festival.id %>">
            <h2><%= festival.name %></h2>
            <p><%= festival.location %></p>
            <p><%= festival.date %></p>
          </a>
        </div>
      </div>
    </div>
  <% end %>
</div>
