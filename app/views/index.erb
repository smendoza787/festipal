<div class="text-center" style="
  background: url('<%= random_bg_image_url %>') no-repeat center center;
  padding: 100px;
  background-position: center;
  background-size: cover;
  background-attachment: fixed;
  border-radius: 10px 10px 0 0;">
  <h1 class="well">FestiPal</h1>
</div>


  <div class="well text-center">
      <h4>FestiPal is an app for keeping track of your favorite upcoming music festivals!</h4>
      <p>This web application was made using the <a href="http://sinatrarb.com" target="_blank">Sinatra</a> framework.</p>
  </div>
  <div class="well">
      <% if !logged_in? %>
        <form action="/login" method="post">
          <div class="form-group">
            <label for="username">Username:</label>
            <input id="username" type="text" name="username" class="form-control">
          </div>

          <div class="form-group">
            <label for="password">Password:</label>
            <input type="password" id="password" name="password" class="form-control">
          </div>

          <div class="form-group">
            <input type="submit" value="Log In" class="btn btn-primary form-control">
            <br><br>
            <a href="/signup" class="btn btn-success form-control">Sign Up</a>
          </div>
        </form>
      <% else %>
        <div class="row text-center">
          <div class="col-md-4">
            <a href="https://github.com/smendoza787/sinatra-festival-app">
              <h3><i class="fa fa-github-alt fa-2x" aria-hidden="true"></i></h3>
              <h3>Github Repo</h1>
            </a>
          </div>
          <div class="col-md-4">
            <a href="#">
              <h3><i class="fa fa-newspaper-o fa-2x" aria-hidden="true"></i></h3>
              <h3>Blog Post</h3>
            </a>
          </div>
          <div class="col-md-4">
            <a href="https://twitter.com/swergi0">
              <h3><i class="fa fa-twitter fa-2x" aria-hidden="true"></i></h3>
              <h3>Twitter</h3>
            </a>
          </div>
        </div>
      <% end %>
  </div>
